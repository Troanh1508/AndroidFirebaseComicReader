<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewComic">

    <RelativeLayout
        android:background="@color/columnColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <View
            android:id="@+id/chapter_back"
            android:background="@drawable/baseline_chevron_left_24"
            android:layout_width="50dp"
            android:layout_height="50dp" >

        </View>

        <TextView
            android:id="@+id/txt_chapter_name"
            android:text="NO PAGE NUMBER"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:textSize="24sp"
            android:gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/chapter_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </TextView>

        <View
            android:id="@+id/chapter_next"
            android:layout_alignParentRight="true"
            android:background="@drawable/baseline_chevron_right_24"
            android:layout_width="50dp"
            android:layout_height="50dp" >

        </View>

    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </androidx.viewpager.widget.ViewPager>

</LinearLayout>